    <script>
        // Simple Logic for the Hunger Die
        let hunger = 10;
        const hungerDisplay = document.getElementById('hungerValue');

        function updateHunger(amount) {
            hunger += amount;
            if (hunger > 10) hunger = 10;
            if (hunger < 0) hunger = 0;
            
            hungerDisplay.innerText = hunger;
            
            // Visual feedback based on hunger level
            const dieElement = document.querySelector('.hunger-die');
            if (hunger >= 7) {
                dieElement.style.borderColor = '#4ade80'; // Green
                dieElement.style.boxShadow = '0 0 20px rgba(74, 222, 128, 0.4)';
                dieElement.classList.remove('text-yellow-400', 'text-red-500');
                dieElement.classList.add('text-green-400');
            } else if (hunger >= 4) {
                dieElement.style.borderColor = '#facc15'; // Yellow
                dieElement.style.boxShadow = '0 0 20px rgba(250, 204, 21, 0.4)';
                dieElement.classList.remove('text-green-400', 'text-red-500');
                dieElement.classList.add('text-yellow-400');
            } else {
                dieElement.style.borderColor = '#f87171'; // Red
                dieElement.style.boxShadow = '0 0 20px rgba(248, 113, 113, 0.6)';
                dieElement.classList.remove('text-green-400', 'text-yellow-400');
                dieElement.classList.add('text-red-500');
            }
        }

        // Logic for Evolution History
        function addEvolution(type) {
            const listId = type === 'temp' ? 'temp-evo-list' : 'perm-evo-list';
            const list = document.getElementById(listId);
            
            // Prompt for Title
            const title = prompt(type === 'temp' ? "Título del Buff Temporal (ej: Piel Dura):" : "Título de la Asimilación (ej: Alas de Vespid):");
            if (!title) return; // Exit if cancelled

            // Prompt for Description
            const description = prompt("Descripción/Efecto detallado:");
            if (!description) return; // Exit if cancelled
            
            const li = document.createElement('li');
            // Base styles matching existing items
            li.className = "bg-[#222] p-2 rounded border border-gray-600 animate-[fadeIn_0.3s_ease-in-out]";
            
            // Color and Icon coding based on type
            const titleColor = type === 'temp' ? 'text-green-300' : 'text-purple-300';
            const iconClass = type === 'temp' ? 'fas fa-bolt text-green-400' : 'fas fa-dna text-purple-400';
            const borderClass = type === 'temp' ? 'border-green-500/30' : 'border-purple-500/30';
            
            li.innerHTML = `
                <details class="group">
                    <summary class="flex justify-between items-center cursor-pointer list-none">
                        <div class="flex items-center gap-2">
                            <i class="${iconClass}"></i>
                            <span class="${titleColor} font-bold">${title}</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <i class="fas fa-chevron-down chevron text-gray-500 text-xs transition-transform group-open:rotate-180"></i>
                            <button onclick="this.closest('li').remove()" class="text-red-400 hover:text-red-300 ml-2 bg-[#333] px-2 rounded border border-red-900 transition-colors">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </summary>
                    <div class="text-xs text-gray-300 mt-2 pl-2 border-l ${borderClass} space-y-1 pt-1">
                        <p>${description}</p>
                    </div>
                </details>
            `;
            list.appendChild(li);
        }

        // Dice Rolling Logic
        function rollDice(sides) {
            const result = Math.floor(Math.random() * sides) + 1;
            const display = document.getElementById('last-roll-result');
            
            // Animation effect
            let counter = 0;
            const interval = setInterval(() => {
                display.innerText = Math.floor(Math.random() * sides) + 1;
                counter++;
                if (counter > 10) {
                    clearInterval(interval);
                    display.innerText = result;
                    // Color coding for criticals (d100 logic)
                    if (sides === 100) {
                        if (result <= 10) display.className = "text-green-400 font-mono text-xl font-bold animate-pulse";
                        else if (result >= 90) display.className = "text-red-500 font-mono text-xl font-bold";
                        else display.className = "text-white font-mono text-xl";
                    } else {
                        display.className = "text-white font-mono text-xl";
                    }
                }
            }, 50);
        }
    </script>
</body>
</html>
